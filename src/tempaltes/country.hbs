{{#each this}}
<li class="box__template animate__animated animate__backInLeft">
    <div class="box__inline-block">
        <h2 class="country__name">{{name}}</h2>
        <p class="country__capital"><span class="first-word-bold">Capital: </span> {{capital}}</p>
        <p class="country__population"><span class="first-word-bold">Population: </span>{{population}}</p>
        <ul class="country__languages-box">
            <p class="country__languages-title"><span class="first-word-bold">languages</span></p>
            {{#each languages}}
            <li class="country__languages-items">{{name}}</li>
            {{/each}}
        </ul>
    </div>
    <img class="country__flag" src="{{flag}}" alt="{{name}}" width="480px">
</li>
{{/each}}